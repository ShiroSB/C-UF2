#include <stdio.h>

int conver();

void main(){
    
    int x;
    
    x = conver();

}

int VLT(){
    
    int i,j;
    
    int matriz[i][j];
    
    do{
                
        printf("Introduce los datos : ");
            
        scanf("%d",&matriz[i][j]);
            
    }while(matriz[i][j] < 0 || matriz[i][j] > 10);
    
    return matriz[i][j];

}

int conver(){
    
    int i,x,j,ROWS,COLS;

    printf("Introduce las ROWS : ");
    
    scanf("%d",&ROWS);
    
    printf("Introduce las COLS : ");
    
    scanf("%d",&COLS);
    
    int matriz[ROWS][COLS];
    
    for (i = 0 ; i < ROWS ; i++){
        for ( j = 0 ; j < COLS ; j++){
            
            matriz[i][j] = VLT();
            
        }
        
    }
    
        for (i = 0 ; i < ROWS ; i++){
        for ( j = 0 ; j < COLS ; j++){
            
            printf("[%d]",matriz[i][j]);

        }
        
        printf("\n");
        
    }

    
}
