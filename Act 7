#include <stdio.h>

int VLT();

int VLTTMN();

void main(){
    
    int i = 0,TMN,max = 0,min = 10,aux;
    
    float suma = 0;
    
    TMN = VLTTMN();
    
    int arr[TMN];
    
    for(i = 0 ; i < TMN ; i++){
        
        arr[i] = VLT();
        
        suma += arr[i];
        
    }
        
    for(i = 0 ; i < TMN ; i++){
        
    if(arr[i] > max){
        max = arr[i];
    }
    if(arr[i] < min)
        min = arr[i];
    }
        
    for(i = 0 ; i < TMN ; i++){
        
        printf("[%d]",arr[i]);
        
    }
    
    printf("\nValor maximo : %d",max);
    
    printf("\nValor minimo : %d",min);
    
    printf("\nMedia : %f",suma / TMN);
    
}


int VLTTMN(){
    
    int x;
    
    do{
    
    printf("TamaÃ±o del array : ");
    
    scanf("%d",&x);
    
    }while(x < 1 || x > 50);
    
    return x;
    
}

int VLT(){
    
    int i = 0;
    
    int arr[i];
    
    do{
    
    printf("Introduce los datos : ");
        
    scanf("%d",&arr[i]);

    }while(arr[i] < 0 || arr[i] > 10);
    
    return arr[i];
        
}
